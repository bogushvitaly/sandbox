{
  "name": "functions",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "build": "psc-package build && tslint -p tslint.json && webpack",
    "deploy": "firebase deploy --only functions",
    "lint": "tslint --project tsconfig.json",
    "logs": "firebase functions:log",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "npm run build && jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "firebase-admin": "6.5.0",
    "firebase-functions": "2.1.0",
    "jest": "23.6.0",
    "purescript-psa": "0.7.3",
    "purs-loader": "3.2.0",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.3",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "@types/jest": "23.3.13",
    "psc-package": "3.0.1",
    "pulp": "12.3.1",
    "purescript": "0.12.2",
    "tslint": "5.12.1",
    "typescript": "3.2.4",
    "webpack": "4.28.4",
    "webpack-cli": "3.2.1"
  }
}