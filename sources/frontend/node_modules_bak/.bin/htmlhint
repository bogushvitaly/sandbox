#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  NODE_PATH="/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/0.10.1/node_modules/htmlhint/bin/htmlhint/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/0.10.1/node_modules/htmlhint/bin/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/0.10.1/node_modules/htmlhint/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/0.10.1/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules:/mnt/e/workspace/projects/sandbox/sources/node_modules:/mnt/e/workspace/projects/sandbox/node_modules:/mnt/e/workspace/projects/node_modules:/mnt/e/workspace/node_modules:/mnt/e/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/htmlhint/bin/htmlhint/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/htmlhint/bin/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/htmlhint/node_modules" "$basedir/node"  "$basedir/../htmlhint/bin/htmlhint" "$@"
  ret=$?
else 
  NODE_PATH="/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/0.10.1/node_modules/htmlhint/bin/htmlhint/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/0.10.1/node_modules/htmlhint/bin/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/0.10.1/node_modules/htmlhint/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/0.10.1/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/htmlhint/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/.registry.npmjs.org/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules:/mnt/e/workspace/projects/sandbox/sources/node_modules:/mnt/e/workspace/projects/sandbox/node_modules:/mnt/e/workspace/projects/node_modules:/mnt/e/workspace/node_modules:/mnt/e/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/htmlhint/bin/htmlhint/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/htmlhint/bin/node_modules:/mnt/e/workspace/projects/sandbox/sources/frontend/node_modules/htmlhint/node_modules" node  "$basedir/../htmlhint/bin/htmlhint" "$@"
  ret=$?
